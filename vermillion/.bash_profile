alias mv="mv -i"

export EDITOR=$(which vim)


function __parse_git_branch { 
  # fastest way I'm aware of
  sed 's/ref: refs\/heads\///' 2>/dev/null <.git/HEAD | sed 's/.*/ &/'
}

function __git_is_dirty {
  git status --porcelain 2> /dev/null | tr '\n' ' ' | sed -e 's/.*/ */'
}

