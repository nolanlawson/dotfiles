test -f ~/.profile && . ~/.profile
test -f ~/.bashrc && . ~/.bashrc

export PATH=$PATH:/c/hub-windows-amd64-2.2.3/bin

eval "$(hub alias -s)"
alias open=explorer

alias rm="rm -i"
